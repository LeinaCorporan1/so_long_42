NAME		=	so_long

CC			=	gcc
FLAGS		=	-Wall -Wextra -Werror

AR			=	ar rcs
RM			=	rm -f

MLX_DIR		=	mlx_linux/
HEADER		=	so_long.h

SRCS		=	main.c

OBJS		=	$(SRCS:.c=.o)

.c.o		:
	@$(CC) $(CFLAGS) -I $(HEADER) -o $@ -c $?

$(NAME)		:	$(OBJS)
	@make -C $(MLX_DIR)
	@$(CC) -o $(NAME) $(OBJS) -L$(MLX_DIR) -lmlx_linux
all			:	$(NAME)

clean		:
	@make -C $(MLX_DIR) clean
	@$(RM) $(OBJS)

fclean		:	clean
	@$(RM) $(NAME)

re			:	clean all

PHONY		:	all clean fclean re